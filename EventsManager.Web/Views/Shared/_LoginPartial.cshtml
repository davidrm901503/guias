@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    <div class="mt-2 mt-md-0 text-center">
        <div class="mr-2">
            <img class="rounded-circle img-fluid " src="@Url.Content("~/Content/app/img/avatar.jpg")" id="account-img"/>
        </div>
    </div>
    <div class="mt-2 mt-md-0 text-center">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item">
                <a class="nav-link c-pointer" id="sidebarCollapse">
                    @User.Identity.GetUserName() <i class="fa fa-chevron-down"></i>
                </a>
            </li>
        </ul>
    </div>
}
else
{
    <div class="mt-2 mt-md-0 text-center">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item">
                @*@Html.ActionLink("Inicie Sesión", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "nav-link c-pointer" })*@
                <a class="nav-link c-pointer" href="@Url.Action("Login","Account")">
                    <i class="fa fa-user pr-1"></i>Inicie Sesión
                </a>
            </li>
        </ul>
    </div>

}


