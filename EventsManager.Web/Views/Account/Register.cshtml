@model RegisterViewModel
@{
    ViewBag.Title = "Registro";
}


@section slide
{
    <div class="jumbotron jumbotron-fluid mb-0 d-flex">
        <div class="container align-self-center">
            <div class="row justify-content-center ">
                <div class="col-11 col-md-6 col-lg-4 align-self-center">
                    <div class="card">
                        <div class="card-header text-center">
                            <h6>@ViewBag.Title</h6>
                        </div>
                        <div class="card-body">
                            @Html.Partial("_SignupPartial")
                        </div>
                        <div class="card-footer text-center">
                            <a class="btn btn-link " style="text-decoration: none; color: inherit" href="@Url.Action("Index", "Home")">
                                <i class="fa fa-chevron-left mr-2"></i>Regresar a la p&aacute;gina principal
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
