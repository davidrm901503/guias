@model LoginViewModel
@{
    ViewBag.Title = "Entrar";
    ViewBag.PageClass = "wrapper register-page";
}

@section slide
{
    <div class="jumbotron jumbotron-fluid mb-0 d-flex" style="height: auto">
        <div class="container align-self-center  mt-5 mt-sm-1 mt-md-0">
            <div class="row justify-content-center text-center">
                <div class="col-10 col-sm-10 col-md-10 col-lg-8 d-flex align-self-center justify-content-center">
                    <div class="card w-100">
                        <div class="card-header bg-primary text-white">
                            <div class="container-fluid">
                                <div class="row">
                                    <div class="col-6">
                                        <h6>Entrar</h6>
                                    </div>
                                    <div class="col-6">
                                        <h6>Registrarse</h6>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="container-fluid">
                                <div class="row">
                                    <div class="col-12">
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="col-12 col-md-6">
                                        @Html.Partial("_SigninPartial", (LoginViewModel)ViewBag.SigninModel)
                                    </div>
                                    <div class="col-12 col-md-6">
                                        @Html.Partial("_SignupPartial", (RegisterViewModel)ViewBag.SignupModel)
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer text-center">
                            <a class="btn btn-link " style="text-decoration: none; color: inherit" href="@Url.Action("Index", "Home")">
                                <i class="fa fa-chevron-left mr-2"></i>Regresar a la p&aacute;gina principal
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}